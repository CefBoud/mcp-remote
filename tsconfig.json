{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    "lib": ["ES2022", "DOM"],
    "types": ["node", "react"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts","src/**/*"],
  "exclude": ["node_modules", "packages", "**/*.spec.ts"]
}
